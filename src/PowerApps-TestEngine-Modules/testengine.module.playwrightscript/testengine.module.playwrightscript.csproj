  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="copy bin\$(configuration)\net6.0\testengine.module.playwrightscript.dll ..\..\..\PowerApps-TestEngine\bin\$(configuration)\PowerAppsTestEngine\testengine.module.playwrightscript.dll" />
  </Target>

</Project>
